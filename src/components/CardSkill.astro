---
import type { Skill } from "../data/skills";
import * as Icons from "./icons";

const { skill } = Astro.props;
interface Props {
  skill: Skill;
}

// Obtener el componente del icono din√°micamente
const IconComponent = Icons[skill.icon as keyof typeof Icons];
---

<div
  class="skill-card group relative overflow-hidden rounded-lg border border-input bg-background p-6 transition-all hover:shadow-lg hover:scale-101"
>
  <div class="flex items-center gap-3 mb-4 p-4">
    <span class="text-3xl flex items-center justify-center">
      {
        IconComponent ? (
          <IconComponent
            class={
              "h-8 w-8  md:h-10 md:w-10 md:saturate-0 md:group-hover:saturate-100 transition-colors )"
            }
            color={skill.color}
          />
        ) : (
          skill.icon
        )
      }
    </span>
    <h3 class="text-xl font-light">{skill.name}</h3>
  </div>

  <!-- Badges -->
  <div class="flex flex-wrap gap-2">
    {
      skill.badges.map((badge: string) => (
        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-sm bg-primary/10 text-primary border border-primary/50">
          {badge}
        </span>
      ))
    }
  </div>

  <div
    class="absolute inset-0 -z-10 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
</div>
