---
import type { Skill } from "../data/skills";

const { skill } = Astro.props;
interface Props {
  skill: Skill;
}
---

<div
  class="skill-card group relative overflow-hidden rounded-lg border border-input bg-background p-6 transition-all hover:shadow-lg hover:scale-101"
>
  <div class="flex items-center gap-3 mb-4">
    <span class="text-3xl">{skill.icon}</span>
    <h3 class="text-xl font-semibold">{skill.name}</h3>
  </div>

  <!-- Badges -->
  <div class="flex flex-wrap gap-2">
    {
      skill.badges.map((badge: string) => (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-primary/10 text-primary border border-primary/20">
          {badge}
        </span>
      ))
    }
  </div>

  <div
    class="absolute inset-0 -z-10 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
  >
  </div>
</div>
