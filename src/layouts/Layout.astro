---
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>

<script>
  import Lenis from "@studio-freight/lenis";
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  // Registrar ScrollTrigger
  gsap.registerPlugin(ScrollTrigger);

  // üéØ Inicializar Lenis para smooth scroll con inercia
  const lenis = new Lenis({
    duration: 1.2,
    easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
  });

  // üîÑ Sincronizar Lenis con GSAP ScrollTrigger
  lenis.on("scroll", ScrollTrigger.update);

  gsap.ticker.add((time) => {
    lenis.raf(time * 1000);
  });

  gsap.ticker.lagSmoothing(0);

  // üéØ Hacer que Lenis est√© disponible globalmente para el Header
  (window as any).lenis = lenis;

  // üßπ Limpiar al salir
  window.addEventListener("beforeunload", () => {
    lenis.destroy();
  });
</script>

<style is:global>
  html {
    font-family: lato, sans-serif;
  }

  /* Color scheme se adapta autom√°ticamente seg√∫n la clase .dark */
  html {
    color-scheme: light;
  }

  html.dark {
    color-scheme: dark;
  }

  body {
    /* background-color: var(--color-background); */
  }
</style>
